---
import { Image } from 'astro:assets';
import flowPalLogo from '../assets/clients/flow_pal.png';
import hisonrisaLogo from '../assets/clients/hisonrisa_logo.svg';
import longsockLogo from '../assets/clients/longsock_logo.png';
import pxllabsLogo from '../assets/clients/pxllabs.svg';
import stoffelLogo from '../assets/clients/stoffel_logo.svg';
---

<footer class="footer mt-6 font-mono tracking-tighter text-sm lg:block grow-1 text-muted-foreground">
    <div class="flex flex-col gap-2">
        <span>Recent Work</span>
        <div class="flex flex-row lg:gap-12 md:gap-6 gap-2 items-center justify-left flex-wrap">
            <Image src={pxllabsLogo} alt="pxllabs logo" height={16} width={124} />
            <Image class="mix-blend-luminosity" src={stoffelLogo} alt="stoffel logo" height={22} width={116} />
            <Image class="w-auto h-12" src={flowPalLogo} alt="flowPal logo" height={288} width={320} />
            <Image src={hisonrisaLogo} alt="hisonrisa logo" height={20} width={92} />
            <Image class="w-auto h-8"src={longsockLogo} alt="longsong logo" height={144} width={504} />
        </div>
        <div class="flex flex-row gap-4 items-center justify-between">
            <div>
                <span>2025. All rights reserved.</span>
            </div>
            <div class="flex flex-row gap-8 items-center justify-right">
                <a class="hover:text-gray-800 transition-colors duration-300 z-20" href="/">Home</a>
                <a class="hover:text-gray-800 transition-colors duration-300 z-20" href="/about">About</a>
            </div>
        </div>
    </div>
</footer>